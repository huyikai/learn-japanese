---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';
import TagItem from '@components/TagItem.astro';
const pageTitle = '単語';
const allWords = (await getCollection('words')).sort((a, b) => a.data.title.localeCompare(b.data.title));
---

<BaseLayout pageTitle={pageTitle}>
  <h2>単語リスト</h2>
  <p>合計数：{allWords.length}</p>
  <div class="tags">
    {
      allWords.map((item) => (
        <TagItem
          title={item.data.title}
          url={`words/${item.slug}`}
        />
      ))
    }
  </div>
</BaseLayout>
<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
</style>
