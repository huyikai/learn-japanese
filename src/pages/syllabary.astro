<BaseLayout>
  <div class="content-container">
    <div>
      <h2>清音</h2>
      <SyllabaryTable rows={seion} />
    </div>
    <div>
      <h2>浊音</h2>
      <SyllabaryTable rows={zhuoyin} />
      <h2>半浊音</h2>
